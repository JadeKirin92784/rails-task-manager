<div class="container mt-2">
  <h1> My tasks</h1>
  <% @tasks.each do |task|  %>
    <div>
       <% if task.completed %>
        <i class="fa-regular fa-square-check"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %> 
        <%= link_to task_path(task), class: 'btn btn-light', data: { turbo_method: :delete, turbo_confirm: "Delete #{task.title}?" } do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
    </div>
  <% end %>

  <div class="mt-2"> <%= link_to "Add a task", new_task_path %> </div>
</div>


