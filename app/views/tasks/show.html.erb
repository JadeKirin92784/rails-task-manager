<div class="container mt-2">
    <h1> <%= @task.title %> </h1>
    <p>
      <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-light'  %>
    </p>

    <div class="btn btn-light mt-2"> Details: <%= @task.details %> </div>
    
    <div class="mt-2"> 
        <% if @task.completed %>  
            <i class="fa-regular fa-square-check"></i> This task is completed. 
        <% else %>
            <i class="fa-regular fa-square"></i> This task is not completed yet. 
        <% end %>  
    </div>


   <div class="mt-2"> <%= link_to "Back to list", tasks_path %> </div>
</div>